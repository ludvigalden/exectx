{
	"name": "exectx-monorepo",
	"description": "Cancelable contexts and executions",
	"version": "0.0.0",
	"private": true,
	"license": "MIT",
	"author": {
		"name": "Ludvig Aldén",
		"email": "ludvig@tifum.com",
		"url": "https://github.com/ludvigalden"
	},
	"contributors": [
		"Ludvig Aldén <ludvig@tifum.com> (https://github.com/ludvigalden)"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ludvigalden/exectx.git"
	},
	"keywords": [
		"execution",
		"context",
		"cancelable",
		"promise"
	],
	"lint-staged": {
		"*.{ts|tsx}": [
			"yarn eslint --fix",
			"tsc --noEmit --esModuleInterop",
			"git add -A"
		]
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"postinstall": "preconstruct dev && manypkg check",
		"build": "preconstruct fix && preconstruct build",
		"release": "yarn build && changeset publish",
		"test": "jest",
		"clean": "manypkg exec rm -rf node_modules && manypkg exec rm -rf dist && rm -rf node_modules",
		"lint": "yarn eslint ."
	},
	"dependencies": {
		"@babel/core": "^7.18.0",
		"@babel/plugin-transform-runtime": "^7.18.0",
		"@babel/preset-env": "^7.18.0",
		"@babel/preset-typescript": "^7.17.12",
		"@babel/runtime": "^7.18.0",
		"@changesets/cli": "^2.22.0",
		"@manypkg/cli": "^0.19.1",
		"@preconstruct/cli": "^2.1.5",
		"@types/jest": "^27.5.1",
		"@typescript-eslint/eslint-plugin": "5.25.0",
		"@typescript-eslint/parser": "5.25.0",
		"babel-eslint": "10.1.0",
		"babel-jest": "^28.1.0",
		"babel-preset-minify": "^0.6.0-alpha.9",
		"eslint": "8.16.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-import-resolver-typescript": "2.7.1",
		"eslint-loader": "4.0.2",
		"eslint-plugin-babel": "5.3.1",
		"eslint-plugin-import": "2.26.0",
		"eslint-plugin-prettier": "4.0.0",
		"eslint-plugin-unused-imports": "2.0.0",
		"got": "^10.6.0",
		"husky": "8.0.1",
		"jest": "^28.1.0",
		"lint-staged": "12.4.1",
		"prettier": "2.6.2",
		"typescript": "4.6.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"preconstruct": {
		"packages": [
			"packages/*"
		]
	},
	"browserslist": [
		"defaults",
		"> 0.5%",
		"Firefox ESR",
		"not IE <= 10"
	]
}